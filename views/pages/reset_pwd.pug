doctype html
html(lang=lang.key)
  head
    include ../includes/head.jade
    link(rel='stylesheet', href='css/login.min.css')
    script(src='js/jquery.min.js')
    script(src='js/reset_pwd.js')
  body
    .container
      h1 #{lang.link_reset}
      .row
        .col-md-10.col-md-offset-1
          p#reset-ok.well(style="display:none;") #{lang.reset_ok}
          section.reset-form
            form.form-horizontal
              .form-group
                label.col-sm-2(for="reset-email") #{lang.reset_email}
                input#reset-email.col-sm-10.form-control.input-lg(type='email' placeholder=lang.reset_email)
                span#helpBlock.help-block #{lang.reset_help}
              .form-group
                .col-sm-offset-2.col-sm-10
                  .g-recaptcha(data-sitekey=captcha)
              .form-group
                .col-sm-12
                  button#reset-submit.btn.btn-lg.btn-block.btn-primary(role='button') #{lang.reset_reset}
              p#reset-error.well(style="display:none;")
    include ../includes/footer.jade
