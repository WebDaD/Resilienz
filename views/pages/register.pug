doctype html
html(lang=lang.key)
  head
    include ../includes/head.jade
    link(rel='stylesheet', href='css/css.min.css')
    link(rel='stylesheet', href='css/jquery.datetimepicker.css')
    script(src='js/jquery.min.js')
    script(src='https://www.google.com/recaptcha/api.js')
    script(src='http://maps.google.com/maps/api/js?libraries=places&key=AIzaSyA3hzfW_O8PH8KuKos9M_-UE_B6x3TJmPw')
    script(src='js/jquery.cookie.js')
    script(src='js/jquery.md5.js')
    script(src='js/jquery.datetimepicker.full.min.js')
    script(src='js/locationpicker.jquery.min.js')
    script(src='js/register.js')
  body
    .container
      h1 #{lang.link_register}
      .row
        .col-md-10.col-md-offset-1
          section.register-form
            form.form-horizontal
              .form-group
                label.col-sm-2(for="register_language") #{lang.login_language}
                select#register_language.col-sm-10.form-control
                  each lname, lkey in languages
                    option(value=lkey)= lname
              .form-group
                label.col-sm-2(for="register-email") #{lang.login_email}
                input#register_email.col-sm-10.form-control.input-lg(type='email' placeholder=lang.login_email)
              .form-group
                label.col-sm-2(for="register_vorname") #{lang.login_vorname}
                input#register_vorname.col-sm-10.form-control.input-lg(type='text' placeholder=lang.login_vorname)    
              .form-group
                label.col-sm-2(for="register_nachname") #{lang.login_nachname}
                input#register_nachname.col-sm-10.form-control.input-lg(type='text' placeholder=lang.login_nachname)    
              .form-group
                label.col-sm-2(for="register_password") #{lang.login_password}
                input#register_password.col-sm-10.form-control.input-lg(type='password' placeholder=lang.login_password)
              .form-group
                label.col-sm-2(for="register_passwordrepeat") #{lang.login_passwortrepeat}
                input#register_passwordrepeat.col-sm-10.form-control.input-lg(type='password' placeholder=lang.login_passwortrepeat)
              hr                    
              .form-group
                label.col-sm-2(for="register_location") #{lang.login_location}
                #register_location.col-sm-10.form-control.input-lg(style="width: 100%; height: 400px;")
              .form-group
                label.col-sm-2(for="register_start") #{lang.login_start}
                input#register_start.col-sm-10.form-control.input-lg(type='text' placeholder=lang.login_start)   
              .form-group
                label.col-sm-2(for="register_stop") #{lang.login_stop}
                input#register_stop.col-sm-10.form-control.input-lg(type='text' placeholder=lang.login_stop)
              .form-group
                .col-sm-12
                  .g-recaptcha(data-sitekey=captcha)
              .form-group
                .col-sm-12
                  button#register_submit.btn.btn-lg.btn-primary.btn-block(type="button" role='button') #{lang.login_register}
              p#register-error.well(style="display:none;")
    include ../includes/footer.jade
