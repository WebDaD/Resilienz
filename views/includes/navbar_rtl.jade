nav.navbar.navbar-default
  .fluid-container
    #navbar.collapse.navbar-collapse
      .btn-group.navbar-left(style="margin-left:10px;margin-right:10px;")
        button.btn.btn-default.navbar-btn.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") 
          span.caret
          span {{niceLanguage}}
        ul.dropdown-menu
          li
            a(href="#" ng-click="selectLanguage('de')") Deutsch
          li
            a(href="#" ng-click="selectLanguage('en')") English
          li
            a(href="#" ng-click="selectLanguage('es')") Español
          li
            a(href="#" ng-click="selectLanguage('ar')") العربية
      button.navbar-left.btn.btn-default.navbar-btn(type="button" ng-click="logout()" ng-show="email !== ''" style="margin-left:10px;") #{lang.nav_logout}
      p.navbar-text.navbar-left(ng-show="email !== ''" style="margin-left:10px;") {{email}} #{lang.nav_logged_in_as}
      ul.nav.navbar-nav
        li(ng-show="admin" ng-class="{ active: isActive('/users')}")
          a(href='#!/users') Users
        li(ng-show="admin" ng-class="{ active: isActive('/actions')}")
          a(href='#!/actions') Actions
        li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/finish')}")
          a(href='#!/manage') #{lang.nav_manage}
        li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/layout')}")
          a(href='#!/layout') #{lang.nav_layout}
        li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/materials')}")
          a(href='#!/materials') #{lang.nav_materials}
        li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/welcome')}")
          a(href='#!/welcome') #{lang.nav_welcome}
      a.navbar-brand(href='#')
        // #{lang.title}
        img(src="images/android-chrome-192x192.png" style="width:72px;height:auto;")
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only #{lang.toogle_navigation}
        span.icon-bar
        span.icon-bar
        span.icon-bar
    // /.nav-collapse     
      