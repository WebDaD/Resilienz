doctype html
html(lang=lang.key, ng-app='resilienzManager')
  head
    include ../includes/head.pug
  body.no-skin
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only #{lang.toogle_navigation}
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            img(src="images/android-chrome-72x72.png")
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/welcome')}")
              a(href='#!/welcome') #{lang.nav.welcome}
            li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/upload')}")
              a(href='#!/upload') #{lang.nav.upload}
            li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/layout')}")
              a(href='#!/layout') #{lang.nav.layout}
            li(ng-show="username !== '' && !admin" ng-class="{ active: isActive('/finish')}")
              a(href='#!/finish') #{lang.nav.finish}
            li(ng-show="admin" ng-class="{ active: isActive('/actions')}")
              a(href='#!/actions') Actions
            li(ng-show="admin" ng-class="{ active: isActive('/users')}")
              a(href='#!/users') Users
          button.navbar-right.btn.btn-default.navbar-btn(type="button" ng-click="logout()" ng-show="username !== ''" style="margin-left:10px;") #{lang.nav.logout}
          p.navbar-text.navbar-right(ng-show="username !== ''" style="margin-left:10px;") #{lang.nav.logged_in_as} {{username}}
        // /.nav-collapse
    div(ng-class="{'container': !fullscreen, 'fluid-container': fullscreen}")
      #ng-view(ng-view='')
    include ../includes/footer.pug
    include ../includes/scripts.pug